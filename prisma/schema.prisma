generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ActionConfig {
  id       String  @id @default(cuid())
  actionId String  @unique
  label    String
  enabled  Boolean @default(true)

  responseType   String
  staticText     String?
  dataSource     String?
  templateFormat String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([actionId])
}

